@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Prac8_MVC.Models.Customer
@using (Html.BeginForm())
{
    <div>
        @Html.TextBoxFor(model => model.Surname, new { placeholder = "Фамилия" })
    </div>
    <div>
        @Html.TextBoxFor(model => model.Name, new { placeholder = "Имя" })
    </div>
    <div>
        @Html.TextBoxFor(model => model.Pat, new { placeholder = "Отчество" })
    </div>
    <div>
        @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Номер телефона" })
    </div>
    <div>
        @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
    </div>
    <input type="submit" value="Оформить заказ" />
}